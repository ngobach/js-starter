{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "Just a starter project for NodeJS apps.",
  "homepage": "https://gitlab.com/thanbaiks/node-starter/",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/thanbaiks/node-starter/"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-import": "^2.8.0",
    "sinon": "^4.1.3"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "babel-node ./src/index.js",
    "build": "babel src --out-dir dist",
    "lint": "eslint ./src",
    "test": "ava"
  },
  "keywords": [
    "starter"
  ],
  "author": "BachNX <mail@ngobach.com>",
  "license": "ISC",
  "files": [
    "./dist"
  ],
  "engines": {
    "node": "^6.0.0",
    "npm": "^3.0.0"
  },
  "ava": {
    "files": [
      "src/**/__test__/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
